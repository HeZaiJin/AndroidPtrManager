<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.haozhang.ptrmanager.EntryActivity"
    tools:showIn="@layout/activity_entry">


    <com.rey.material.widget.Button
        android:id="@+id/ptrlistview"
        style="@style/Entry_Button_Style"
        android:text="PtrListViewManager"
        app:v_styleId="@array/button_flat_color"
        />

    <com.rey.material.widget.Button
        android:id="@+id/ptrrecycler"
        android:text="PtrRecyclerViewManager"
        style="@style/Entry_Button_Style"
        app:v_styleId="@array/button_flat_color"
        />

    <com.rey.material.widget.Button
        android:id="@+id/recyclerviewadapter"
        style="@style/Entry_Button_Style"
        android:text="RecyclerView Adapter"
        app:v_styleId="@array/button_flat_color"
         />

    <com.rey.material.widget.Button
        android:id="@+id/test"
        style="@style/Entry_Button_Style"
        app:v_styleId="@array/button_flat_color"
        android:text="Test"
         />

</LinearLayout>
